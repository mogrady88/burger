<div class="col-md-6 burgers-list text-center">
<h2>Burgers to be devoured</h2>
<ul class="burgers">
    {{#each burgers}}
    {{#unless devoured}}
    <li style="list-style-type:none">{{this.id}} {{this.burger_name}} <button class="devoured" id="{{this.id}}">Devour!</button></li>
    {{/unless}}
    {{/each}}
</ul>
</div>
<div class="col-md-6 devoured-list text-center">
<h2>Devoured burgers</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li style="list-style-type:none">{{this.id}} {{this.burger_name}}</li>
    {{/if}}
    {{/each}}
</ul>
</div>